<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="111dp">

    <TextView
        android:id="@+id/commit_author_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="76dp"
        android:layout_marginTop="16dp"
        android:letterSpacing="0.01"
        android:lineSpacingExtra="2sp"
        android:textColor="@color/blue"
        android:textSize="11sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/author_mail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/commit_author_name"
        android:layout_marginStart="76dp"
        android:letterSpacing="0.02"
        android:lineSpacingExtra="5dp"
        android:textColor="@color/black"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/commit_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/author_mail"
        android:layout_marginStart="76dp"
        android:letterSpacing="0.02"
        android:lineSpacingExtra="5dp"
        android:maxLines="2"
        android:textColor="@color/dark_grey"
        android:textSize="17sp" />

    <FrameLayout
        android:id="@+id/commit_set"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="26dp">

        <ImageView
            android:id="@+id/circle_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/circle_view" />

        <TextView
            android:id="@+id/commit_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="17sp" />

    </FrameLayout>


</RelativeLayout>